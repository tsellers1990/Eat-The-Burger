<h1>Eat The Burgers</h1>

<h2>Available Burgers</h2>

<ul>
    {{#each burger_data}}
        {{#unless this.devoured}}
            {{>burgers/burgers-block eaten=true}}
        {{/unless}}
    {{/each}}
</ul>

<h2>Eaten Burgers</h2>

<ul>
    {{#each burger_data}}
        {{#if this.devoured}}
        {{!-- /partials/burgers/burger-block --}}
            {{>burgers/burgers-block eaten=false}}
        {{/if}}
    {{/each}}
</ul>

<h2>Create a New Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name"><br>
        <input type="radio" name="eaten" value="1"> Eaten!<br>
        <input type="radio" name="eaten" value="0"> Not Eaten
    </div>

    <button type="submit">Add Burger</button>
</form>